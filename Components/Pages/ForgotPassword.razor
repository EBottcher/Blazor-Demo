@page "/forgotpassword"
@rendermode InteractiveServer

<PageTitle>Forgot Password</PageTitle>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <h1>Forgot Password</h1>
        <p class="text-muted">Enter your email address and we'll send you a link to reset your password.</p>
        
        <EditForm Model="@forgotPasswordModel" OnValidSubmit="@HandlePasswordReset" FormName="forgotPasswordForm">
            <DataAnnotationsValidator />
            
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <InputText id="email" @bind-Value="forgotPasswordModel.Email" class="form-control" placeholder="Enter your email" />
                <ValidationMessage For="@(() => forgotPasswordModel.Email)" />
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
            </div>

            <div class="text-center">
                <a href="/login" class="btn-link">Back to Login</a>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @errorMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success mt-3" role="alert">
                    @successMessage
                </div>
            }
        </EditForm>
    </div>
</div>

@code {
    private ForgotPasswordModel forgotPasswordModel = new();
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;

    private void HandlePasswordReset()
    {
        // Clear previous messages
        errorMessage = string.Empty;
        successMessage = string.Empty;

        // Placeholder for actual password reset logic
        // In a real application, this would send a password reset email
        successMessage = $"If an account exists for {forgotPasswordModel.Email}, a password reset link has been sent.";
        
        // Reset form after successful submission
        forgotPasswordModel = new ForgotPasswordModel();
    }

    public class ForgotPasswordModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Email is required.")]
        [System.ComponentModel.DataAnnotations.EmailAddress(ErrorMessage = "Please enter a valid email address.")]
        public string Email { get; set; } = string.Empty;
    }
}
